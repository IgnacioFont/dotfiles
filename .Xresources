URxvt.font: xft:Noto Sans Mono:size=10
URxvt.colorUL: #4682B4
URxvt.scrollBar: false
URxvt.perl-ext-common: default,matcher,fullscreen,url-select,keyboard-select,resize-font
!! URxvt*perl-lib: $HOME/.config/urxvt/ext

!! matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

!! Fullscreen
URxvt.keysym.F11: perl:fullscreen:switch

!! keyboard-select
URxvt.keysym.M-k: perl:keyboard-select:activate

!! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

!! resize-font
URxvt.resize-font.smaller: C-j
URxvt.resize-font.bigger: C-k
!! Remap copypaste shortcut
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:

!! Disable ISO14755 mode shortcut
URxvt.iso14755: false
URxvt.iso14755_52: false

